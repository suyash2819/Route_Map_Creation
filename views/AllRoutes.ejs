<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <link href="/assets/AllRoutes.css" rel="stylesheet" type="text/css">
  </head>
  <body>
    <center>
    <table>
      <tr>
        <th>
          Route Name
        </th>
        <th>
          Status
        </th>
        <th>
          City
        </th>
        <th>
          Source
        </th>
        <th>
          Destination
        </th>
        <th>
          Stops
        </th>
        <th>
          Route Type
        </th>
        <th>
          Delete route
        </th>
        <th>
          Update route
        </th>
      </tr>
             <% for(var i=0; i < routes.length ; i++){%>
              <tr>
                <td><%= routes[i].RouteName %></td>
                <td><%= routes[i].Status %></td>
                <td><%=  routes[i].City %></td>
                <td><%=  routes[i].Source %></td>
                <td><%=  routes[i].Destination %></td>
                <td>
                  Name: <%=  routes[i].Stops[0].name %><br>
                  Latitude : <%=  routes[i].Stops[0].latitude %><br>
                  Longitude : <%=  routes[i].Stops[0].longitude %>
                </td>
                <td><%=  routes[i].Routetype %></td>
                <td><a href="delete/<%=routes[i]._id %>"><button type="button" name="button" class="Change">Delete</button></a></td>
                <td><a href="update/<%=routes[i]._id %>"><center><button type="button" name="button" class="Change">Update</button></center></a></td>
              </tr>
            <%} %>
    </table>
    </center>
</html>
